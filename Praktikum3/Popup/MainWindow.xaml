<Window x:Class="Popup.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Popup"
        mc:Ignorable="d"
        Title="Настройка всплывающей подсказки (Popup)" Height="300" Width="300">
    <Grid Margin="10">
        <TextBlock TextWrapping="Wrap"> Этот текст показывает, как можно в TextBlock создать <Run TextDecorations="Underline" MouseEnter="run_MouseEnter"> ссылку </Run>.
        </TextBlock>
        <Popup Name="popLink" StaysOpen="False" Placement="Mouse" MaxWidth="200" PopupAnimation="Scroll" AllowsTransparency="True">
            <Border BorderThickness="3" CornerRadius="3" BorderBrush="#AA323232" Background="#AA000000">
                <TextBlock Margin="10" TextWrapping="Wrap" Foreground="White"> Ссылка в текстовом блоке. <Hyperlink Foreground="#009BFF" NavigateUri="http://en.wikipedia.org/wiki/Term" Click="lnk_Click"> Wikipedia</Hyperlink></TextBlock>
            </Border>
        </Popup>
    </Grid>
</Window>
